{% extends 'base.html.twig' %}

{% block title %}Hello AboutController!
{% endblock %}

{% block body %}
	<section class="en-direct" id="about">
		<div class="container-fluid border-top">
			<div class="row">
				<div class="col pe-md-4">
					<img src="uploads/{{ about.illustration }}" alt="A propos">
				</div>
				<div class="col pe-md-4">
					<div class="mt-2">
						<p class="fw-bolder">{{ about.title }}</p>
						<div>
							<h2>{{ about.subtitle }}</h2>
							<p>{{ about.description }}</p>
						</div>
					</div>
					<div class="row">
						{% for item in aboutDetails %}
							<div class="col-md-6">
								<div class="flaticon1">
									<i class="{{ item.icon }}"></i>
								</div>
								<h3>{{ item.title }}</h3>
								<p>{{ item.subtitle }}</p>
							</div>
						{% endfor %}
					</div>
					<div class="row">
						<div class="col">
							<button id="podcast" class="mt-3">Apprendre encore plus</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
